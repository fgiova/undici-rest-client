{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDirs": [
            "./src"
        ],
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"],
    "include": [
        "src",
        "./@types"
    ]
}